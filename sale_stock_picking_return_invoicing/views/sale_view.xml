<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_order_form_refunds" model="ir.ui.view">
		<field name="name">view.order.form.refunds</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form"/>
		<field name="arch" type="xml">
			<!-- <xpath expr="//button[@name='action_view_invoice']" position="after">  -->
			<xpath expr="//div[@name='button_box']" position="inside">
				<button type="object" name="action_view_invoice_refund"
					class="oe_stat_button" icon="fa-pencil-square-o"
					attrs="{'invisible': [('invoice_refund_count', '=', 0)]}">
					<field name="invoice_refund_count" widget="statinfo" string="Refunds"/>
				</button>
			</xpath>
			<xpath expr="//page[@name='other_info']/group//group[@name='sale_pay']//field[@name='invoice_status']"
				   position="before">
				<field name="force_state" groups="sales_team.group_sale_salesman"/>
			 </xpath>
			 <xpath expr="//field[@name='order_line']/tree/field[@name='qty_delivered']" position="after">
				<field name="qty_returned" invisible="context.get('hide_sale', False)"/>
				<field name="invoice_status" invisible="1"/>
			</xpath>
			<xpath expr="//field[@name='order_line']/tree/field[@name='qty_invoiced']" position="before">
				<field name="qty_to_invoice" invisible="context.get('hide_sale', False)" groups="base.group_no_one"/>
			</xpath> 
			<xpath expr="//field[@name='order_line']/tree/field[@name='qty_invoiced']" position="after">
				<field name="qty_to_refund" invisible="context.get('hide_sale', False)"/>
				<field name="qty_refunded"  invisible="context.get('hide_sale', False)"/>
			</xpath> 
			<xpath expr="//field[@name='effective_date']" position="after">
				<button type="object" 
						name="action_compute_sale_line_qty" 
						string="Recompute fields in sale lines" 
						class="oe_highlight" 
						groups="base.group_system"/> 
			</xpath> 
		</field>
	</record>
</odoo>
